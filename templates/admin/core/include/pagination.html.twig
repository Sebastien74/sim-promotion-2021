{% trans_default_domain 'admin' %}

{% if pagination.getTotalItemCount is defined and (pagination.getTotalItemCount / pagination.itemNumberPerPage) > 1 %}
    <div class="card-footer border-top">
        <div class="row">
            <div class="col-md-6 my-auto">
                {% set delta = (pagination.itemNumberPerPage - pagination|length) %}
                {% set itemsCountStart = pagination.currentPageNumber == 1 ? 1 : (pagination.itemNumberPerPage * pagination.currentPageNumber) - pagination.itemNumberPerPage + 1 %}
                {% set itemsCountEnd = (pagination.itemNumberPerPage * pagination.currentPageNumber) - delta %}
                {{ itemsCountStart }} - {{ itemsCountEnd }} / {{ pagination.getTotalItemCount }}
            </div>
            <div class="col-md-6 my-auto text-right">{{ knp_pagination_render(pagination) }}</div>
        </div>
    </div>
{% endif %}