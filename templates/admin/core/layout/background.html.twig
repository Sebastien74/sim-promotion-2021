{% trans_default_domain 'admin' %}

<div class="modal-wrapper">
    <div class="modal fade modal-background-layout layout-modal"
         id="modal-background" tabindex="-1" role="dialog"
         aria-labelledby="modal-background-{{ interface['name'] ~ '-' ~ entity.id }}-label" aria-hidden="true">
        {{ form_start(form, {'attr': {
            "id": "background-form",
            "action": path("admin_" ~ interface.name ~ "_background", {"website": websiteId(), (interface['name']): entity.id}),
            'class': 'edit-element-form'
        }}) }}
            <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
                <div class="modal-content border">
                    <div class="modal-header">
                        <h5 class="modal-title text-center w-100" id="modal-background-{{ interface['name'] ~ '-' ~ entity.id }}-label">{{ 'far fa-palette'|fontawesome(null, 50, 'dark') }}</h5>
                        <button class="close" data-dismiss="modal" aria-label="{{ "Fermer"|trans }}">
                            {{ 'fal fa-times'|fontawesome(20, 20, 'dark') }}
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ form_widget(form.backgroundColor) }}
                        {% if form.backgroundFullSize is defined %}
                            {{ form_row(form.backgroundFullSize) }}
                        {% endif %}
                    </div>
                    <div class="modal-footer">
                        {{ form_widget(form.save) }}
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>