{% trans_default_domain 'admin' %}

<div id="edition-container" class="card">

    <h5 class="card-title card-header mb-0">{{ 'fal fa-code'|fontawesome(null, 18, 'info-darken mr-2') }}{{ "Balises métas"|trans }}</h5>

    <div class="card-body">

        {{ form_start(form, {"attr": {
            "id": 'seo-form-' ~ entity.id,
            "novalidate": "novalidate"
        }}) }}

            <div class="row">
                {{ form_row(form.metaTitle) }}
                {{ form_row(form.metaDescription) }}
                {{ form_row(form.metaCanonical) }}
                {{ form_row(form.url.isIndex) }}
                {{ form_row(form.url.hideInSitemap) }}
            </div>

            <div class="form-group col-12 ribbon-wrapper m-0">
                <div class="ribbon ribbon-bookmark ribbon-default cursor collapsed" data-toggle="collapse" href="#collapse-open-graph" role="button" aria-expanded="false">
                    {{ 'far fa-share-alt'|fontawesome(null, 13, 'white mr-3') }}{{ "Open graph tags"|trans }}
                </div>
            </div>

            <div class="collapse col-12 collapseOG" id="collapse-open-graph">
                <div class="row">
                    <div class="col-md-8 pl-0"><button class="autocomplete btn btn-info w-100 mb-3">{{ "Saisie automatique"|trans }}</button></div>
                    <div class="col-md-4 pr-0"><button class="resetautocomplete btn btn-secondary w-100 mb-3">{{ "Réinitialiser"|trans }}</button></div>
                    <div class="row">
                        {{ form_row(form.metaOgTitle) }}
                        {{ form_row(form.metaOgDescription) }}
                        {{ form_row(form.metaOgTwitterCard) }}
                        {{ form_row(form.metaOgTwitterHandle) }}
                        <div class="col-12">
                            {% include 'admin/page/media/modal-btn.html.twig' with {'classname': class} %}
                            {{ form_row(form.mediaRelation.media.uploadedFile) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group col-12 ribbon-wrapper m-0">
                <div class="ribbon ribbon-bookmark ribbon-default cursor collapsed" data-toggle="collapse" href="#collapse-url" role="button" aria-expanded="false">
                    {{ 'far fa-link'|fontawesome(null, 13, 'white mr-3') }}{{ "URL"|trans }}
                </div>
            </div>

            <div class="collapse" id="collapse-url">
                <div class="row">
                    {{ form_row(form.url.code) }}
                    {{ form_row(form.url.isOnline) }}
                    {% if form.url.indexPage is defined %}
                        {{ form_row(form.url.indexPage) }}
                    {% endif %}
                </div>
            </div>

            <div class="form-group col-12 ribbon-wrapper m-0">
                <div class="ribbon ribbon-bookmark ribbon-default cursor collapsed" data-toggle="collapse" href="#collapse-options" role="button" aria-expanded="false">
                    {{ 'far fa-plus-circle'|fontawesome(null, 13, 'white mr-3') }}{{ "Options"|trans }}
                </div>
            </div>

            <div class="collapse col-12" id="collapse-options">
                <div class="row">
                    <div class="row">
                        {{ form_row(form.metaTitleSecond) }}
                        {{ form_row(form.author) }}
                        {{ form_row(form.footerDescription) }}
                        {{ form_row(form.breadcrumbTitle) }}
                        {{ form_row(form.noAfterDash) }}
                    </div>
                </div>
            </div>

            {% if website.seoConfiguration.microData %}

                <div class="form-group col-12 ribbon-wrapper m-0">
                    <div class="ribbon ribbon-bookmark ribbon-default cursor collapsed" data-toggle="collapse" href="#collapse-microdata" role="button" aria-expanded="false">
                        {{ 'far fa-server'|fontawesome(null, 13, 'white mr-3') }}{{ "Microdata"|trans }}
                    </div>
                </div>

                <div class="collapse col-12" id="collapse-microdata">
                    <div class="row">
                        {{ form_row(form.authorType) }}
                        {{ form_row(form.metadata) }}
                    </div>
                </div>

            {% endif %}

            <div class="form-group text-right mb-0">
                <button type="submit" id="submit-seo" class="btn btn-info w-100">{{ "Enregistrer"|trans }}</button>
            </div>

        {{ form_end(form) }}

    </div>

</div>