{% trans_default_domain 'admin' %}

<div class="w-100 mb-3">

    {% include 'admin/include/i18n-selector.html.twig' with {"route": 'admin_table_edit', "args": { "table": entity.id }} %}

    <a id="table-add-col"
       class="btn btn-outline-dark" href="{{ path('admin_tablecol_add', {"website": website.id, "table": entity.id}) }}"
       data-toggle="preloader">
        {{ 'fal fa-plus'|fontawesome(null, 15, 'mr-2') }}{{ "Ajouter une colonne"|trans}}
    </a>

    {% if table.head is defined %}
        <a id="table-add-row"
           class="btn btn-outline-dark"
           href="{{ path('admin_tablecell_add', {"website": website.id, "table": entity.id}) }}"
           data-toggle="preloader">
            {{ 'fal fa-plus'|fontawesome(null, 15, 'mr-2') }}{{ "Ajouter une ligne"|trans}}
        </a>
    {% endif %}

</div>