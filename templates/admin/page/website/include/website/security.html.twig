{% trans_default_domain 'admin' %}

<h4 class="card-subtitle mb-3">{{ 'fal fa-cog'|fontawesome(null, 18, 'info-darken mr-2') }}{{ "Configuration"|trans }}</h4>
<div class="row">
    {{ form_row(form.security.secureWebsite) }}
</div>

<h4 class="card-subtitle mb-3">{{ 'fal fa-network-wired'|fontawesome(null, 18, 'info-darken mr-2') }}{{ "Administrateurs"|trans }}</h4>
<div class="row">
    {{ form_row(form.security.adminRegistration) }}
    {{ form_row(form.security.adminRegistrationValidation) }}
    {{ form_row(form.security.adminPasswordSecurity) }}
    {{ form_row(form.security.adminPasswordDelay) }}
</div>

{% if form.security.frontRegistration is defined %}
    <h4 class="card-subtitle mb-3">{{ 'fal fa-desktop'|fontawesome(null, 18, 'info-darken mr-2') }}{{ "Utilisateurs front"|trans }}</h4>
    <div class="row">
        {{ form_row(form.security.frontRegistration) }}
        {{ form_row(form.security.frontRegistrationValidation) }}
        {{ form_row(form.security.frontEmailConfirmation) }}
        {{ form_row(form.security.frontPasswordSecurity) }}
        {{ form_row(form.security.frontPasswordDelay) }}
    </div>
{% endif %}