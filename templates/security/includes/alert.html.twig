{% trans_default_domain 'admin' %}

{% trans_default_domain 'security_cms' %}

{% set icons = {
    'success': 'far fa-check',
    'info': 'fas fa-info',
    'warning': 'fas fa-exclamation',
    'danger': 'far fa-exclamation-triangle',
    'error_form': 'far fa-exclamation-triangle',
    'error': 'far fa-exclamation-triangle',
    'undefined': 'fas fa-info'
} %}

{% set alert = alert is defined ? alert : "info" %}
{% set alert = "error" in alert  ? "danger" : alert %}
{% set icon = icons[alert] is defined ? icons[alert] : icons['undefined'] %}

<!-- .alert -->
<div class="ribbon-vwrapper alert alert-{{ alert }}">
    <div class="ribbon ribbon-bookmark ribbon-vertical-l ribbon-{{ alert }}">
        {{ icon|fontawesome(null, 14) }}
    </div>
    <button class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">Ã—</span> </button>
    {% if message is defined %}
        {{ message|raw }}
    {% else %}
        {{ "Que se passe-t-il ?"|trans|raw }}
    {% endif %}
</div>
<!-- /.alert -->