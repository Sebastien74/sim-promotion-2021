{% set websiteArray = website(false, true) %}
{% set apiI18ns = websiteArray|apiI18ns %}
{% set apiGoogle = apiI18ns|apiI18n('google', app.request.locale) %}

{% if apiGoogle.analyticsUa is defined and apiGoogle.analyticsUa %}

    {% set UA = apiGoogle.analyticsUa %}

    <!--  Google Analytics -->
    {% if not status %}

        <script class="analytics-script" nonce="{{ csp_nonce() }}">
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function() {
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('set', 'anonymizeIp', true);
            ga('create', '{{ UA }}', 'auto');
            ga('send', 'pageview')
        </script>

    {% else %}

        <script class="analytics-script" nonce="{{ csp_nonce() }}">
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function() {
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('create', '{{ UA }}', 'auto');
            ga('send', 'pageview')
        </script>

    {% endif %}

{% endif %}